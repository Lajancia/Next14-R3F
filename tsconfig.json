{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // 프로젝트 루트를 기준으로 설정
    "paths": { "three-stdlib": ["types/three-stdlib.d.ts"] }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/app/[lng]/gallery/page.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
